<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="387dp"
            android:layout_weight="4"
            android:background="@android:color/holo_green_light"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="425dp"
                android:layout_height="77.5dp"
                android:layout_weight="3"
                android:background="#26A69A"
                android:gravity="center"
                android:orientation="vertical">

<!--                <Button-->
<!--                    android:id="@+id/hamburger_button"-->
<!--                    style="@style/Widget.AppCompat.Button"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:gravity="center"-->
<!--                    android:onClick="openNavigationView"-->
<!--                    android:text="|||"-->
<!--                    app:backgroundTint="@color/teal_700">-->

<!--                </Button>-->

                <ImageButton
                    android:id="@+id/hamburger_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="openNavigationView"
                    app:backgroundTint="@color/teal_700"
                    app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                    app:tint="@color/white"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_bright"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/start_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#4DB6AC"
                    android:gravity="center"
                    android:hint="Miejsce startowe"
                    android:inputType="text"></EditText>

                <EditText
                    android:id="@+id/destination_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#4DB6AC"
                    android:gravity="center"
                    android:hint="Miejsce docelowe"
                    tools:ignore="TouchTargetSizeCheck"></EditText>


            </LinearLayout>

            <LinearLayout
                android:layout_width="425dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#26A69A"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/search_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="routeSearch"
                    app:backgroundTint="@color/teal_700"
                    app:srcCompat="?android:attr/actionModeWebSearchDrawable"
                    app:tint="@color/white"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#80CBC4"
            android:orientation="vertical">

            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#26A69A"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.navigation.NavigationView>


